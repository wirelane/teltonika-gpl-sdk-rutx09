+        if (frame == (expected & ~0x10) && settings->windowSizeRX != 1)
+        {
+            return true;
+        }
+
+        //If Final bit is not set for the previous message.
+        if ((settings->receiverFrame & 0x10) == 0 && settings->windowSizeRX != 1)
+        {
