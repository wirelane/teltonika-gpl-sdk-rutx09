            "x-web": {
              "pretty": "DNS servers",
              "input-type": "input",
              "group": "Advanced Settings"
            },
            "type": "array",
            "description": "DNS servers for interface. The value can be left empty to use system default DNS servers.",
            "items": {
              "type": "string"
            }
          }
