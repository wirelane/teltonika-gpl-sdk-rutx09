  "components": {
    "responses": {
      "200RiGe": {
        "description": "Returns section",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "string"
                    },
                    "enabled_vty": {
                      "type": "string"
                    },
                    "ripd_custom_conf": {
                      "type": "string"
                    },
                    "ripd_custom_conf:file_size": {
                      "type": "number"
                    },
                    "version": {
                      "type": "string"
                    },
                    "neighbors": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "file_response": {
        "description": "Example response",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "rip_general_options": {
        "type": "object",
        "properties": {
          "enabled": {
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            },
            "type": "string",
            "description": "Enable/Disable RIP protocol."
          },
          "enabled_vty": {
            "x-web": {
              "pretty": "Enable VTY",
              "input-type": "switch"
            },
            "type": "string",
            "description": "Enable/Disable vty access from LAN."
          },
          "ripd_custom_conf": {
            "x-web": {
              "pretty": "Import config",
              "input-type": "input"
            },
            "type": "string",
            "format": "binary",
            "description": "Use imported RIP configuration."
          },
          "version": {
            "x-web": {
              "pretty": "Version",
              "input-type": "select",
              "enum-pretty": {
                "1": "1",
                "2": "2"
              }
            },
            "type": "string",
            "enum": ["1", "2"],
            "description": "Specify the version of RIP."
          },
          "neighbors": {
            "x-web": {
              "pretty": "Neighbor",
              "input-type": "input"
            },
            "type": "array",
            "description": "Specify RIP neighbor.",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "requestBodies": {
      "ripd_custom_config": {
        "content": {
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "option": {
                  "type": "string",
                  "description": "Parameter to upload the file to.",
                  "enum": ["ripd_custom_conf"]
                },
                "file": {
                  "type": "string",
                  "description": "File to upload.",
                  "format": "binary"
                }
              },
              "required": ["option", "file"]
            }
          }
        }
      }
    }
  },
  "info": {
