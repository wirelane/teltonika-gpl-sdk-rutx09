          "latitude",
          "angle",
          "utc_timestamp"
        ]
      },
      "gps_global_options": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "string",
            "description": "Turns the GPS service on or off. This field has to be enabled in order to use any GPS related functions.",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "pretty": "Enabled",
              "input-type": "switch"
            }
          },
          "galileo_sup": {
            "type": "string",
            "description": "Turns support for Galileo satellites on or off.",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "!modems": [
                "SLM770-A",
                "BG95-M4"
              ],
              "pretty": "Galileo NMEA support",
              "input-type": "switch"
            }
          },
          "glonass_sup": {
            "type": "string",
            "description": "Turns support for Glonass satellites on or off.",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "!modems": [
                "SLM770-A",
                "BG95-M4"
              ],
              "pretty": "Glonass NMEA support",
              "input-type": "switch"
            }
          },
          "beidou_sup": {
            "type": "string",
            "description": "Turns support for BeiDou satellites on or off.",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "!modems": [
                "SLM770-A",
                "BG95-M4"
              ],
              "pretty": "BeiDou NMEA support",
              "input-type": "switch"
            }
          },
          "dpo_enabled": {
            "type": "string",
            "description": "Turns DPO mode on or off.",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "modems": [
                "EC25-EC",
                "EC25-E",
                "EC25-EU",
                "EC25-EUX",
                "EC25-AUTL",
                "EC25-AUT",
                "EC25-AUX",
                "EC25-AFX",
                "EC25-AFF",
                "EC25-AF",
                "EC25-AU",
                "EC25-A",
                "EC25-V",
                "EC25-J",
                "EC20-CE",
                "EC200A-EU",
                "EC200A-AU",
                "EC200A-CN",
                "EC21-EC",
                "EC21-EU",
                "EC21-E",
                "EC21-AUV",
                "EC21-AUX",
                "EC21-AUT",
                "EC21-AU",
                "EC21-A",
                "EC21-V",
                "EC21-J",
                "EG06-E",
                "EG06-A",
                "EG12-EA",
                "EG25-G",
                "BG96",
                "BG95-M3",
                "BG95-M4",
                "RG500Q-EU",
                "RG500Q-EA",
                "RG500U-EA",
                "RG500U-EB",
                "RG501Q-EU",
                "RG501Q-EA",
                "RG520N-NA",
                "RG520N-EU",
                "UC20-A",
                "UC20-E",
                "UC20-G"
              ],
              "pretty": "DPO enabled",
              "input-type": "switch"
            }
          },
          "mode": {
            "type": "string",
            "description": "WWAN and GNSS coexistance mode",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "modems": [
                  "BG95-M3",
                  "BG95-M4"
              ],
              "pretty": "Mode",
              "enum-pretty": {
                "0": "GNSS Only",
                "1": "WWAN + GNSS"
              },
              "input-type": "select"
            }
          },
          "interval": {
            "type": "string",
            "description": "How frequently should GNSS be activated (seconds)",
            "format": "irange(60,86400)",
            "x-web": {
              "input-type": "input",
              "pretty": "Interval",
              "depends": [
                {
                  "mode": "1"
                }
              ]
            }
          },
          "timeout": {
            "type": "string",
            "description": "Maximum GNSS position fix waiting time (seconds)",
            "format": "irange(30,999)",
            "x-web": {
              "input-type": "input",
              "pretty": "Timeout",
              "depends": [
                {
                  "mode": "1"
                }
              ]
            }
          }
        },
        "required": [
          "enabled",
          "galileo_sup",
          "glonass_sup",
          "beidou_sup"
        ]
      },
      "gps_status_options": {
        "description": "GPS supported functionality list",
        "type": "object",
        "properties": {
          "dpo_support": {
            "type": "boolean",
            "description": "Enable dynamic power optimization (requires modem reboot)."
          }
        }
      }
