      "gps_https_single_options": {
        "description": "HTTPS/HTTP Server Settings",
        "type": "object",
        "properties": {
          "enabled": {
            "type": "string",
            "description": "Enable NMEA forwarding to remote server in HTTPS protocol",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "pretty": "Enabled",
              "input-type": "switch"
            }
          },
          "hostname": {
            "type": "string",
            "description": "URL of the remote server (ex. example.com/xxxx)",
            "format": "url",
            "x-web": {
              "pretty": "URL",
              "input-type": "input"
            }
          },
          "interval": {
            "type": "string",
            "description": "Interval on which collected NMEA sentences should be forwarded",
            "format": "irange(1,4294967296)",
            "x-web": {
              "pretty": "Interval",
              "input-type": "input"
            }
          }
        },
        "required": [
          "enabled",
          "hostname",
          "interval"
        ]
      },
