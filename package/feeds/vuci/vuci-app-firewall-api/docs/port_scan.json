{
  "openapi": "3.0.0",
  "tags": [],
  "paths": {
    "/attack_prevention/port_scan/config": {
      "get": {
        "summary": "Returns Firewall Port Scan Settings",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200PrtScnMulti"
          }
        },
        "tags": [
          "Port Scan"
        ]
      },
      "put": {
        "summary": "Updates Firewall Port Scan Settings",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200PrtScnMulti"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "description": "Parameter section",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "array",
                    "description": "Array of Port Scan objects",
                    "items": {
                      "$ref": "#/components/schemas/port_scan_options"
                    }
                  }
                }
              }
            }
          }
        },
        "tags": [
          "Port Scan"
        ]
      },
      "x-web": {
        "name": "Attack Prevention",
        "menu": [
          "Network",
          "Firewall",
          "Attack Prevention"
        ],
        "hw_tags": {
          "is_access_point": false,
          "is_switch": false
        }
      }
    },
    "/attack_prevention/port_scan/config/{id}": {
      "get": {
        "summary": "Returns Firewall Port Scan Settings",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200PrtScn"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the Port Scan configuration"
          }
        ],
        "tags": [
          "Port Scan"
        ]
      },
      "put": {
        "summary": "Updates Firewall Port Scan Settings",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200PrtScn"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "description": "Parameter section",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "$ref": "#/components/schemas/port_scan_options_single_put"
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the Port Scan configuration"
          }
        ],
        "tags": [
          "Port Scan"
        ]
      },
      "x-web": {
        "name": "Attack Prevention",
        "menu": [
          "Network",
          "Firewall",
          "Attack Prevention"
        ],
        "hw_tags": {
          "is_access_point": false,
          "is_switch": false
        }
      }
    }
  },
  "components": {
    "responses": {
      "200PrtScn": {
        "description": "Returns section",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "description": "Operation status",
                  "type": "boolean"
                },
                "data": {
                  "$ref": "#/components/schemas/port_scan_options"
                }
              }
            }
          }
        }
      },
      "200PrtScnMulti": {
        "description": "Returns sections",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "description": "Operation status",
                  "type": "boolean"
                },
                "data": {
                  "type": "array",
                  "description": "Array of section objects",
                  "items": {
                    "$ref": "#/components/schemas/port_scan_options"
                  }
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "port_scan_options": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "x-web": {
              "pretty": "Configuration ID",
              "input-type": "input"
            }
          },
          "port_scan": {
            "type": "string",
            "description": "Enable port scan prevention",
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            }
          },
          "hitcount": {
            "type": "string",
            "description": "Port scan count before packets are rejected. Minimal value is 5",
            "format": "irange(5, 10000)",
            "x-web": {
              "pretty": "Scan count",
              "input-type": "input"
            }
          },
          "seconds": {
            "type": "string",
            "description": "Time range in which 'scan count' has to be reached before packets are rejected",
            "format": "irange(10, 1000)",
            "x-web": {
              "pretty": "Interval",
              "input-type": "input"
            }
          },
          "syn_fin": {
            "type": "string",
            "description": "Protect from SYN",
            "x-web": {
              "pretty": "SYN-FIN attack",
              "input-type": "switch"
            }
          },
          "syn_rst": {
            "type": "string",
            "description": "Protect from SYN",
            "x-web": {
              "pretty": "SYN-RST attack",
              "input-type": "switch"
            }
          },
          "x_max": {
            "type": "string",
            "description": "Protect from X",
            "x-web": {
              "pretty": "X-Mas attack",
              "input-type": "switch"
            }
          },
          "nmap_fin": {
            "type": "string",
            "description": "Protect from nmap FIN scan",
            "x-web": {
              "pretty": "FIN scan",
              "input-type": "switch"
            }
          },
          "null_flags": {
            "type": "string",
            "description": "Protect from NULLflags attack",
            "x-web": {
              "pretty": "NULLflags attack",
              "input-type": "switch"
            }
          }
        }
      },
      "port_scan_options_single_put": {
        "type": "object",
        "properties": {
          "port_scan": {
            "type": "string",
            "description": "Enable port scan prevention",
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            }
          },
          "hitcount": {
            "type": "string",
            "description": "Port scan count before packets are rejected. Minimal value is 5",
            "x-web": {
              "pretty": "Scan count",
              "input-type": "input"
            }
          },
          "seconds": {
            "type": "string",
            "description": "Time range in which 'scan count' has to be reached before packets are rejected",
            "x-web": {
              "pretty": "Interval",
              "input-type": "input"
            }
          },
          "syn_fin": {
            "type": "string",
            "description": "Protect from SYN",
            "x-web": {
              "pretty": "SYN-FIN attack",
              "input-type": "switch"
            }
          },
          "syn_rst": {
            "type": "string",
            "description": "Protect from SYN",
            "x-web": {
              "pretty": "SYN-RST attack",
              "input-type": "switch"
            }
          },
          "x_max": {
            "type": "string",
            "description": "Protect from X",
            "x-web": {
              "pretty": "X-Mas attack",
              "input-type": "switch"
            }
          },
          "nmap_fin": {
            "type": "string",
            "description": "Protect from nmap FIN scan",
            "x-web": {
              "pretty": "FIN scan",
              "input-type": "switch"
            }
          },
          "null_flags": {
            "type": "string",
            "description": "Protect from NULLflags attack",
            "x-web": {
              "pretty": "NULLflags attack",
              "input-type": "switch"
            }
          }
        }
      }
    }
  }
}