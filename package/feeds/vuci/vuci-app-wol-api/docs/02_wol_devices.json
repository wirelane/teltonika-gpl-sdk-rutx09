    "schemas": {
      "wol_setup_options": {
        "type": "object",
        "properties": {
          "broadcast": {
            "x-web": {
              "pretty": "Broadcast",
              "input-type": "switch"
            },
            "type": "string",
            "enum": [
              "on",
              "off"
            ],
            "description": "If turned on, the WOL function sends a magic packet to the broadcast address (FF:FF:FF:FF:FF:FF) whenever it is asked to wake a device"
          },
          "interface": {
            "x-web": {
              "pretty": "Interface",
              "input-type": "input"
            },
            "type": "string",
            "description": "Interface name which will be used for WOL"
          }
        }
      },
      "wol_devices_options": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "password": {
                "type": "string",
                "x-web": {
                  "pretty": "Password",
                  "input-type": "input"
                },
                "description": "Password in HEX without any delimiters.",
                "format": "regex",
                "pattern": "^[0-9a-fA-F]{8}|[0-9a-fA-F]{12}$"
              },
              "wakeonboot": {
                "x-web": {
                  "pretty": "Wake on Boot",
                  "input-type": "switch"
                },
                "type": "string",
                "enum": [
                  "on",
                  "off"
                ],
                "description": "Decide whether to send a Wake-On-LAN (WOL) packet when booting the system."
              }
            }
          },
          {
            "$ref": "#/components/schemas/wol_devices_name_mac"
          }
        ]
      },
      "wol_device_options_id": {
        "title": "wol_device_options_id",
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              }
            },
            "required": [
              "id"
            ]
          },
          {
            "$ref": "#/components/schemas/wol_devices_options"
          }
        ]
      },
      "wol_devices_name_mac": {
        "title": "wol_devices_name_mac",
        "type": "object",
        "properties": {
          "name": {
            "x-web": {
              "pretty": "Name",
              "input-type": "input",
              "unique": true
            },
            "type": "string",
            "description": "Name for the target. The name should be unique for each configuration."
          },
          "mac": {
            "type": "string",
            "x-web": {
              "pretty": "Mac",
              "input-type": "input"
            },
            "description": "Specifies the MAC address of the host to wake. The MAC address should be unique for each configuration.",
            "format": "regex",
            "pattern": "^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})|([0-9a-fA-F]{4}\\.[0-9a-fA-F]{4}\\.[0-9a-fA-F]{4})$"
          }
        },
        "required": [
          "name",
          "mac"
        ]
      }
    }
