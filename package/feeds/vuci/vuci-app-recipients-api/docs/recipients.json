          }
        },
        "properties": {
          "name": {
            "x-web": {
              "pretty": "Name",
              "input-type": "input",
              "unique": true
            },
            "type": "string",
            "description": "Account Name.",
            "format": "default_validation",
            "maxLength": 16
          },
          "secure_conn": {
            "x-web": {
              "pretty": "Secure Connection",
              "input-type": "switch"
            },
            "type": "string",
            "description": "Use only if server supports SSL or TLS.",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ]
          },
          "smtp_ip": {
            "x-web": {
              "pretty": "SMTP server",
              "input-type": "input"
            },
            "type": "string",
            "description": "SMTP (Simple Mail Transfer Protocol) server.",
            "format": "regex",
            "pattern": "^[a-zA-Z0-9!@#$%%&*+/=?^_`{|}~. -]+$",
            "maxLength": 64
          },
          "smtp_port": {
            "x-web": {
              "pretty": "SMTP server Port",
              "input-type": "input"
            },
            "type": "string",
            "description": "SMTP (Simple Mail Transfer Protocol) server port.",
            "format": "port"
          },
          "credentials": {
            "x-web": {
              "pretty": "Credentials",
              "input-type": "switch"
            },
            "type": "string",
            "description": "This options allows you to set username and password of email account.",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ]
          },
          "username": {
            "x-web": {
              "pretty": "Username",
              "input-type": "input",
              "depends": [
                {
                  "credentials": "1"
                }
              ]
            },
            "type": "string",
            "description": "Username for authentication on SMTP (Simple Mail Transfer Protocol) server.",
            "format": "credentials_validate, regex",
            "pattern": "^[^']*$",
            "maxLength": 64
          },
          "password": {
            "x-web": {
              "pretty": "Password",
              "input-type": "input",
              "depends": [
                {
                  "credentials": "1"
                }
              ]
            },
            "type": "string",
            "description": "Password for authentication on SMTP (Simple Mail Transfer Protocol) server.",
            "format": "credentials_validate, regex",
            "pattern": "^[^']*$",
            "maxLength": 64
          },
          "senderemail": {
            "x-web": {
              "pretty": "Sender's email address",
              "input-type": "input"
            },
            "type": "string",
            "description": "An address that will be used to send your email from.",
            "format": "email"
          }
        },
        "required": [
          "name"
        ]
      },
