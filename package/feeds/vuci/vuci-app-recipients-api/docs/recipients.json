  "components": {
    "schemas": {
      "email_user": {
        "type": "object",
        "x-examples": {
          "example-1": {
            "username": "",
            "credentials": "",
            "name": "",
            "secure_conn": "",
            "senderemail": "",
            "smtp_port": "",
            "password": "",
