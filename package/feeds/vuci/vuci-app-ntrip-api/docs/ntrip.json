{
  "openapi": "3.0.0",
  "tags": [
    {
      "name": "NTRIP"
    }
  ],
  "info": {
    "title": "NTRIP",
    "version": "1.0",
    "contact": {},
    "description": "NTRIP documentation"
  },
  "paths": {
    "/ntrip/config/{id}": {
      "get": {
        "tags": [
          "NTRIP"
        ],
        "summary": "Returns the specified NTRIP configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200Ntrip"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          }
        }
      },
      "put": {
        "tags": [
          "NTRIP"
        ],
        "summary": "Updates the specified NTRIP configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200Ntrip"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "description": "Parameter configuration",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "$ref": "#/components/schemas/ntrip_single_options"
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "NTRIP"
        ],
        "summary": "Deletes the specified NTRIP configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200Ntrip"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          }
        }
      },
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          },
          "description": "NTRIP Configuration identifier (ID)"
        }
      ],
      "x-web": {
        "menu": [
          "Services",
          "NTRIP",
          "NTRIP"
        ],
        "hw_tags": {
          "serial": true
        }
      }
    },
    "/ntrip/config": {
      "get": {
        "tags": [
          "NTRIP"
        ],
        "summary": "Returns all NTRIP configurations",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200NtripMulti"
          }
        }
      },
      "post": {
        "tags": [
          "NTRIP"
        ],
        "summary": "Creates NTRIP configuration",
        "responses": {
          "201": {
            "$ref": "#/components/responses/200Ntrip"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "description": "Parameter configuration",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "$ref": "#/components/schemas/ntrip_options"
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "NTRIP"
        ],
        "summary": "Updates specified NTRIP configurations",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200NtripMulti"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "description": "Parameter configuration",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "array",
                    "description": "Array of configuration objects",
                    "items": {
                      "$ref": "#/components/schemas/ntrip_options"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "NTRIP"
        ],
        "summary": "Deletes specified NTRIP configurations",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200Ntrip"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          }
        },
        "requestBody": {
          "description": "Parameter configuration",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "array",
                    "description": "Array of configuration objects",
                    "items": {
                      "type": "string",
                      "description": "configuration id"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "x-web": {
        "menu": [
          "Services",
          "NTRIP",
          "NTRIP"
        ],
        "hw_tags": {
          "serial": true
        }
      }
    }
  },
  "components": {
    "responses": {
      "200Ntrip": {
        "description": "Returns configuration",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status"
                },
                "data": {
                  "$ref": "#/components/schemas/ntrip_options"
                }
              }
            }
          }
        }
      },
      "200NtripMulti": {
        "description": "Returns configurations",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status"
                },
                "data": {
                  "type": "array",
                  "description": "Array of configuration objects",
                  "items": {
                    "$ref": "#/components/schemas/ntrip_options"
                  }
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "ntrip_single_options": {
        "title": "NTRIP no id options",
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "NTRIP Configuration name (display purpose only).",
            "maxLength": 200,
            "x-web": {
              "pretty": "Name",
              "input-type": "input",
              "unique": true
            }
          },
          "enabled": {
            "type": "string",
            "description": "Enable/disable NTRIP configuration.",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            }
          },
          "device": {
            "type": "string",
            "description": "Which serial port will be used for serial transmission",
            "x-web": {
              "pretty": "Device",
              "input-type": "select",
              "enum-pretty": {
                "/dev/rs232": "rs232",
                "/dev/rs485": "rs485",
                "/dev/rsconsole": "Console"
              },
              "enum-depends": [
                {
                  "hw_tags": {
                    "rs232": true,
                    "rs485": true
                  },
                  "values": [
                    "/dev/rs232",
                    "/dev/rs485"
                  ]
                },
                {
                  "hw_tags": {
                    "rs232": true,
                    "rs485": false
                  },
                  "values": [
                    "/dev/rs232"
                  ]
                },
                {
                  "hw_tags": {
                    "rs232": false,
                    "rs485": true
                  },
                  "values": [
                    "/dev/rs485"
                  ]
                },
                {
                  "hw_tags": {
                    "console": true
                  },
                  "values": [
                    "/dev/rsconsole"
                  ]
                }
              ]
            }
          },
          "baudrate": {
            "type": "string",
            "enum": [
              "300",
              "1200",
              "2400",
              "4800",
              "9600",
              "19200",
              "38400",
              "57600",
              "115200"
            ],
            "default": "9600",
            "description": "Select supported baud rate",
            "x-web": {
              "pretty": "Baud rate",
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": [
                      "/dev/rs232",
                      "/dev/rsconsole"
                    ]
                  },
                  "hw_tags": {
                    "baudrate_115200": true
                  },
                  "values": [
                    "300",
                    "600",
                    "1200",
                    "2400",
                    "4800",
                    "9600",
                    "19200",
                    "38400",
                    "57600",
                    "115200"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "baudrate_3000000": true
                  },
                  "values": [
                    "300",
                    "600",
                    "1200",
                    "2400",
                    "4800",
                    "9600",
                    "19200",
                    "38400",
                    "57600",
                    "115200",
                    "230400",
                    "460800",
                    "921600",
                    "1000000",
                    "3000000"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "baudrate_230400": true
                  },
                  "values": [
                    "300",
                    "600",
                    "1200",
                    "2400",
                    "4800",
                    "9600",
                    "19200",
                    "38400",
                    "57600",
                    "115200",
                    "230400"
                  ]
                }
              ]
            }
          },
          "databits": {
            "type": "string",
            "enum": [
              "5",
              "6",
              "7",
              "8"
            ],
            "default": "8",
            "description": "Select how many bits will be used for character",
            "x-web": {
              "pretty": "Data bits",
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": "/dev/rs232"
                  },
                  "hw_tags": {
                    "databits_full": true
                  },
                  "values": [
                    "5",
                    "6",
                    "7",
                    "8"
                  ]
                },
                {
                  "depends": {
                    "device": [
                      "/dev/rs232",
                      "/dev/rsconsole"
                    ]
                  },
                  "hw_tags": {
                    "databits_half": true
                  },
                  "values": [
                    "7",
                    "8"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "databits_8": true
                  },
                  "values": [
                    "8"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "databits_full": true
                  },
                  "values": [
                    "5",
                    "6",
                    "7",
                    "8"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "databits_half": true
                  },
                  "values": [
                    "7",
                    "8"
                  ]
                }
              ]
            }
          },
          "stopbits": {
            "type": "string",
            "enum": [
              "1",
              "2"
            ],
            "default": "1",
            "description": "Select how many stop bits will be used to detect the end of character",
            "x-web": {
              "pretty": "Stop bits",
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": [
                      "/dev/rs232",
                      "/dev/rsconsole"
                    ]
                  },
                  "hw_tags": {
                    "stopbits_2": true
                  },
                  "values": [
                    "1",
                    "2"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "stopbits_1": true
                  },
                  "values": [
                    "1"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "stopbits_2": true
                  },
                  "values": [
                    "1",
                    "2"
                  ]
                }
              ]
            }
          },
          "parity": {
            "type": "string",
            "enum": [
              "odd",
              "even",
              "none"
            ],
            "description": "Select what kind of parity bit to use for error detection",
            "x-web": {
              "pretty": "Parity",
              "enum-pretty": {
                "odd": "Odd",
                "even": "Even",
                "mark": "Mark",
                "space": "Space",
                "none": "None"
              },
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": [
                      "/dev/rs232",
                      "/dev/rsconsole"
                    ]
                  },
                  "hw_tags": {
                    "parity_max": true
                  },
                  "values": [
                    "even",
                    "odd",
                    "mark",
                    "space",
                    "none"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "parity_min": true
                  },
                  "values": [
                    "even",
                    "odd",
                    "none"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "parity_max": true
                  },
                  "values": [
                    "even",
                    "odd",
                    "mark",
                    "space",
                    "none"
                  ]
                }
              ]
            }
          },
          "flowcontrol": {
            "type": "string",
            "enum": [
              "none",
              "xon/xoff",
              "rts/cts"
            ],
            "description": "Select what kind of characters to use for flow control",
            "x-web": {
              "pretty": "Flow control",
              "enum-pretty": {
                "none": "None",
                "rts/cts": "RTS/CTS",
                "xon/xoff": "Xon/Xoff"
              },
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": [
                      "/dev/rs232",
                      "/dev/rsconsole"
                    ]
                  },
                  "hw_tags": {
                    "flowcontrol_3": true
                  },
                  "values": [
                    "rts/cts",
                    "xon/xoff",
                    "none"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485"
                  },
                  "hw_tags": {
                    "flowcontrol_none": true
                  },
                  "values": [
                    "none"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "full_duplex_enabled": "1"
                  },
                  "hw_tags": {
                    "flowcontrol_2": true
                  },
                  "values": [
                    "none",
                    "xon/xoff"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "full_duplex_enabled": "0"
                  },
                  "hw_tags": {
                    "flowcontrol_none": true
                  },
                  "values": [
                    "none"
                  ]
                }
              ]
            }
          },
          "ntrip_ip": {
            "type": "string",
            "description": "NTRIP server address.",
            "format": "ipv4host",
            "x-web": {
              "pretty": "Server address",
              "input-type": "input"
            }
          },
          "ntrip_port": {
            "type": "string",
            "description": "NTRIP server port number.",
            "format": "port",
            "x-web": {
              "pretty": "Server port",
              "input-type": "input"
            }
          },
          "ntrip_mount_point": {
            "type": "string",
            "description": "NTRIP server mount point.",
            "maxLength": 128,
            "x-web": {
              "pretty": "Mount point",
              "input-type": "input"
            }
          },
          "ntrip_data_format": {
            "type": "string",
            "description": "NTRIP data format.",
            "enum": [
              "n",
              "h",
              "u"
            ],
            "x-web": {
              "pretty": "Data format",
              "enum-pretty": {
                "n": "NTRIP v1.0",
                "h": "NTRIP v2.0 TCP",
                "u": "NTRIP v2.0 UDP"
              },
              "input-type": "select"
            }
          },
          "ntrip_user": {
            "type": "string",
            "description": "NTRIP server username.",
            "format": "credentials_validate",
            "x-web": {
              "pretty": "Username",
              "input-type": "input"
            }
          },
          "ntrip_password": {
            "type": "string",
            "description": "NTRIP server password.",
            "format": "credentials_validate",
            "x-web": {
              "pretty": "Password",
              "input-type": "input"
            }
          },
          "nmea_source": {
            "type": "string",
            "description": "Source of NMEA.",
            "format": "irange(1, 4)",
            "enum": [
              "1",
              "2",
              "4"
            ],
            "x-web": {
              "pretty": "NMEA source",
              "enum-pretty": {
                "1": "Predefined string",
                "2": "Predefined coordinates",
                "3": "Router GPS device",
                "4": "Serial device"
              },
              "enum-depends": [
                {
                  "hw_tags": {
                    "gps": true
                  },
                  "values": [
                    "1",
                    "2",
                    "3",
                    "4"
                  ]
                }
              ],
              "input-type": "select"
            }
          },
          "user_nmea": {
            "type": "string",
            "description": "GPGGA NMEA string to be used to initiate communication with the server.",
            "format": "regex",
            "pattern": "^[a-zA-Z0-9%*]+$",
            "x-web": {
              "pretty": "NMEA string",
              "input-type": "input",
              "depends": [
                {
                  "nmea_source": "1"
                }
              ]
            }
          },
          "lattitude": {
            "type": "string",
            "description": "Lattitude to be used to generate NMEA string for initiating communication with the server.",
            "format": "range(-90, 90)",
            "x-web": {
              "pretty": "Lattitude",
              "input-type": "input",
              "depends": [
                {
                  "nmea_source": "2"
                }
              ]
            }
          },
          "longitude": {
            "type": "string",
            "description": "Longitude to be used to generate NMEA string for initiating communication with the server.",
            "format": "range(-180, 180)",
            "x-web": {
              "pretty": "Longtitude",
              "input-type": "input",
              "depends": [
                {
                  "nmea_source": "2"
                }
              ]
            }
          },
          "report_interval": {
            "type": "string",
            "description": "Period in seconds of how often the NMEA is sent to server.",
            "format": "irange(1, 86400)",
            "default": "10",
            "x-web": {
              "pretty": "Report interval",
              "input-type": "input"
            }
          },
          "full_duplex_enabled": {
            "type": "string",
            "format": "is_bool",
            "example": "0",
            "enum": [
              "0",
              "1"
            ],
            "description": "Check to enable rs485 Full-Duplex",
            "x-web": {
              "pretty": "Full duplex",
              "input-type": "switch",
              "depends": [
                {
                  "device": "/dev/rs485"
                }
              ]
            }
          }
        }
      },
      "ntrip_options": {
        "title": "NTRIP options",
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "NTRIP Configuration identifier (ID)."
              }
            },
            "required": [
              "id"
            ]
          },
          {
            "$ref": "#/components/schemas/ntrip_single_options"
          }
        ]
      }
    }
  }
}