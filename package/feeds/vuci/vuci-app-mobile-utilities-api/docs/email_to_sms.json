        "properties": {
          "enabled": {
            "type": "string",
            "description": "Enable/disable email forwarding to SMS",
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            }
          },
          "host": {
            "type": "string",
            "description": "POP3 server",
            "format": "hostname",
            "x-web": {
              "pretty": "POP3 server",
              "input-type": "input"
            }
          },
          "port": {
            "type": "string",
