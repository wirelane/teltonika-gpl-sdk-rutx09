          "application/json": {
            "schema": {
              "description": "",
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status"
                },
                "data": {
                  "type": "array",
                  "uniqueItems": true,
                  "minItems": 1,
                  "items": {
                    "$ref": "#/components/schemas/auto_reply"
                  }
                }
              },
              "required": [
                "success",
                "data"
              ]
            }
          }
        }
      }
    },
    "requestBodies": {
