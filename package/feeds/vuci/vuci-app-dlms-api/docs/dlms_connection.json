{
  "openapi": "3.0.0",
  "tags": [
    {
      "name": "DLMS connections"
    }
  ],
  "paths": {
    "/dlms/connections/config": {
      "get": {
        "summary": "Returns all DLMS connections configurations",
        "tags": [
          "DLMS connections"
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/200DlmsConnectionsMulti"
          }
        }
      },
      "post": {
        "summary": "Creates DLMS connections configuration",
        "responses": {
          "201": {
            "$ref": "#/components/responses/200DlmsConnections"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "$ref": "#/components/schemas/dlms_connections_single_options"
                  }
                }
              }
            }
          }
        },
        "tags": [
          "DLMS connections"
        ]
      },
      "put": {
        "summary": "Updates specified DLMS connections configurations",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200DlmsConnectionsMulti"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/dlms_connections_multiple_options"
                    }
                  }
                }
              }
            }
          }
        },
        "tags": [
          "DLMS connections"
        ]
      },
      "delete": {
        "summary": "Deletes specified DLMS connections configurations",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200deleted_multi"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/delete_multi"
              }
            }
          }
        },
        "tags": [
          "DLMS connections"
        ]
      },
      "x-web": {
        "menu": [
          "Services",
          "DLMS",
          "DLMS"
        ],
        "hw_tags": {
          "is_access_point": false,
          "is_switch": false
        }
      }
    },
    "/dlms/connections/config/{dlms_connections_id}": {
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "dlms_connections_id",
          "in": "path",
          "required": true,
          "description": "DLMS connections Configuration identifier (ID)"
        }
      ],
      "get": {
        "summary": "Returns the specified DLMS connections configuration",
        "tags": [
          "DLMS connections"
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/200DlmsConnections"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          }
        }
      },
      "put": {
        "summary": "Updates the specified DLMS connections configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200DlmsConnections"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "$ref": "#/components/schemas/dlms_connections_single_options"
                  }
                }
              }
            }
          }
        },
        "tags": [
          "DLMS connections"
        ]
      },
      "delete": {
        "summary": "Deletes the specified DLMS connections configuration",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200deleted"
          },
          "404": {
            "$ref": "#/components/responses/404response"
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
        },
        "tags": [
          "DLMS connections"
        ]
      },
      "x-web": {
        "menu": [
          "Services",
          "DLMS",
          "DLMS"
        ],
        "hw_tags": {
          "is_access_point": false,
          "is_switch": false
        }
      }
    }
  },
  "components": {
    "responses": {
      "200DlmsConnections": {
        "description": "Returns configuration",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status"
                },
                "data": {
                  "$ref": "#/components/schemas/dlms_connections_single_options"
                }
              }
            }
          }
        }
      },
      "200DlmsConnectionsMulti": {
        "description": "Returns configurations",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/dlms_connections_multiple_options"
                  }
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "dlms_connections_single_options": {
        "title": "dlms_connections_single_options",
        "type": "object",
        "properties": {
          "enabled": {
            "type": "string",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ],
            "description": "Connection state",
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            }
          },
          "name": {
            "type": "string",
            "description": "Name of DLMS connection configuration",
            "maxLength": 200,
            "x-web": {
              "pretty": "Name of configuration",
              "input-type": "input",
              "unique": true
            }
          },
          "address": {
            "type": "string",
            "description": "DLMS device IP address for TCP connection",
            "x-web": {
              "pretty": "Address",
              "input-type": "input",
              "depends": [
                {
                  "connection_type": "0"
                }
              ]
            }
          },
          "port": {
            "type": "string",
            "description": "DLMS device port for TCP connection",
            "x-web": {
              "pretty": "Address",
              "input-type": "input",
              "depends": [
                {
                  "connection_type": "0"
                }
              ]
            }
          },
          "connection_type": {
            "type": "string",
            "description": "DLMS connection type",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "pretty": "Connection type",
              "input-type": "select",
              "enum-pretty": {
                "0": "TCP",
                "1": "Serial"
              },
              "enum-depends": [
                {
                  "hw_tags": {
                    "rs232": false,
                    "rs485": false
                  },
                  "values": [
                    "0"
                  ]
                }
              ]
            }
          },
          "device": {
            "type": "string",
            "description": "DLMS serial device",
            "x-web": {
              "pretty": "Serial device",
              "input-type": "select",
              "enum-pretty": {
                "/dev/rs232": "rs232",
                "/dev/rs485": "rs485"
              },
              "enum-depends": [
                {
                  "depends": {
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "rs232": true,
                    "rs485": true
                  },
                  "values": [
                    "/dev/rs232",
                    "/dev/rs485"
                  ]
                },
                {
                  "depends": {
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "rs232": true,
                    "rs485": false
                  },
                  "values": [
                    "/dev/rs232"
                  ]
                },
                {
                  "depends": {
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "rs232": false,
                    "rs485": true
                  },
                  "values": [
                    "/dev/rs485"
                  ]
                }
              ]
            }
          },
          "baudrate": {
            "type": "string",
            "enum": [
              "300",
              "1200",
              "2400",
              "4800",
              "9600",
              "19200",
              "38400",
              "57600",
              "115200"
            ],
            "default": "9600",
            "description": "Select supported baud rate",
            "x-web": {
              "pretty": "Baud rate",
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": "/dev/rs232",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "baudrate_115200": true
                  },
                  "values": [
                    "300",
                    "600",
                    "1200",
                    "2400",
                    "4800",
                    "9600",
                    "19200",
                    "38400",
                    "57600",
                    "115200"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "baudrate_3000000": true
                  },
                  "values": [
                    "300",
                    "600",
                    "1200",
                    "2400",
                    "4800",
                    "9600",
                    "19200",
                    "38400",
                    "57600",
                    "115200",
                    "230400",
                    "460800",
                    "921600",
                    "1000000",
                    "3000000"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "baudrate_230400": true
                  },
                  "values": [
                    "300",
                    "600",
                    "1200",
                    "2400",
                    "4800",
                    "9600",
                    "19200",
                    "38400",
                    "57600",
                    "115200",
                    "230400"
                  ]
                }
              ]
            }
          },
          "databits": {
            "type": "string",
            "enum": [
              "5",
              "6",
              "7",
              "8"
            ],
            "default": "8",
            "description": "Select how many bits will be used for character",
            "x-web": {
              "pretty": "Data bits",
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": "/dev/rs232",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "databits_full": true
                  },
                  "values": [
                    "5",
                    "6",
                    "7",
                    "8"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs232",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "databits_half": true
                  },
                  "values": [
                    "7",
                    "8"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "databits_8": true
                  },
                  "values": [
                    "8"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "databits_full": true
                  },
                  "values": [
                    "5",
                    "6",
                    "7",
                    "8"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "databits_half": true
                  },
                  "values": [
                    "7",
                    "8"
                  ]
                }
              ]
            }
          },
          "parity": {
            "type": "string",
            "enum": [
              "odd",
              "even",
              "none"
            ],
            "description": "Select what kind of parity bit to use for error detection",
            "x-web": {
              "pretty": "Parity",
              "enum-pretty": {
                "odd": "Odd",
                "even": "Even",
                "mark": "Mark",
                "space": "Space",
                "none": "None"
              },
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": "/dev/rs232",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "parity_max": true
                  },
                  "values": [
                    "even",
                    "odd",
                    "mark",
                    "space",
                    "none"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "parity_min": true
                  },
                  "values": [
                    "even",
                    "odd",
                    "none"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "parity_max": true
                  },
                  "values": [
                    "even",
                    "odd",
                    "mark",
                    "space",
                    "none"
                  ]
                }
              ]
            }
          },
          "stopbits": {
            "type": "string",
            "enum": [
              "1",
              "2"
            ],
            "default": "1",
            "description": "Select how many stop bits will be used to detect the end of character",
            "x-web": {
              "pretty": "Stop bits",
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": "/dev/rs232",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "stopbits_2": true
                  },
                  "values": [
                    "1",
                    "2"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "stopbits_1": true
                  },
                  "values": [
                    "1"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "stopbits_2": true
                  },
                  "values": [
                    "1",
                    "2"
                  ]
                }
              ]
            }
          },
          "flowcontrol": {
            "type": "string",
            "enum": [
              "none",
              "xon/xoff",
              "rts/cts"
            ],
            "description": "Select what kind of characters to use for flow control",
            "x-web": {
              "pretty": "Flow control",
              "enum-pretty": {
                "none": "None",
                "rts/cts": "RTS/CTS",
                "xon/xoff": "Xon/Xoff"
              },
              "input-type": "select",
              "enum-depends": [
                {
                  "depends": {
                    "device": "/dev/rs232",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "flowcontrol_3": true
                  },
                  "values": [
                    "rts/cts",
                    "xon/xoff",
                    "none"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "flowcontrol_none": true
                  },
                  "values": [
                    "none"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "full_duplex_enabled": "1",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "flowcontrol_2": true
                  },
                  "values": [
                    "none",
                    "xon/xoff"
                  ]
                },
                {
                  "depends": {
                    "device": "/dev/rs485",
                    "full_duplex_enabled": "0",
                    "connection_type": "1"
                  },
                  "hw_tags": {
                    "flowcontrol_none": true
                  },
                  "values": [
                    "none"
                  ]
                }
              ]
            }
          },
          "full_duplex_enabled": {
            "type": "string",
            "format": "is_bool",
            "example": "0",
            "enum": [
              "0",
              "1"
            ],
            "description": "Check to enable rs485 Full-Duplex",
            "x-web": {
              "pretty": "Full duplex",
              "input-type": "switch",
              "depends": [
                {
                  "device": "/dev/rs485",
                  "connection_type": "1"
                }
              ]
            }
          }
        },
        "required": [
          "enabled",
          "device",
          "connection_type",
          "name",
          "address",
          "port",
          "baudrate",
          "databits",
          "stopbits",
          "flowcontrol",
          "parity"
        ]
      },
      "dlms_connections_multiple_options": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "DLMS connections Configuration identifier (ID)."
              }
            },
            "required": [
              "id"
            ]
          },
          {
            "$ref": "#/components/schemas/dlms_connections_single_options"
          }
        ]
      }
    }
  }
}
