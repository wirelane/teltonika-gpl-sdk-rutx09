                }
              }
            }
          }
        }
      },
      "200CoTMulti": {
        "description": "Returns configurations",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "description": "Operation status"
                },
                "data": {
                  "type": "array",
                  "description": "Array of section objects",
                  "items": {
                    "$ref": "#/components/schemas/cloud_of_things_options"
                  }
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "cloud_of_things_options_single_put": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "string",
            "description": "Enable Cloud of Things application",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            }
          },
          "server": {
            "type": "string",
            "description": "Cloud of Things Server Address",
            "format": "host",
            "x-web": {
              "pretty": "Server address",
              "input-type": "input"
            }
          },
          "interval": {
            "type": "string",
            "description": "Push connection interval in minutes",
            "format": "irange(1,32767)",
            "x-web": {
              "pretty": "Interval",
              "input-type": "input"
            }
          }
        },
        "required": [
          "server",
          "interval"
        ]
      },
      "cloud_of_things_options": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Cloud of Things Configuration identifier (ID)."
              }
            },
            "required": [
              "id"
            ]
          },
          {
            "$ref": "#/components/schemas/cloud_of_things_options_single_put"
          }
        ]
      }
    }
