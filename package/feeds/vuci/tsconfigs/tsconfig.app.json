{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "../node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowJs": true,
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@": [
        "vuci-ui-core/src"
      ],
      "@/*": [
        "vuci-ui-core/src/src/*"
      ],
      "@ui-core": [
        "vuci-ui-core/src/ui-core"
      ],
      "@ui-core/*": [
        "vuci-ui-core/src/ui-core/*"
      ],
      "@root": [
        "."
      ],
      "@root/*": [
        "./*"
      ],
      "@conditional": [
        "vuci-ui-core/src/src/components/package_components/components"
      ],
      "@conditional/*": [
        "vuci-ui-core/src/src/components/package_components/components/*"
      ],
    }
  },
  "include": [
    "../applications/**/*",
    "../applications/**/*.vue",
    "../vuci-ui-core/**/*.vue",
    "../vuci-ui-core/**/*",
    "../.vucix/vuci.d.ts",
    "../docs/**/*",
    "../",
    "../.storybook/**/*",
  ],
  "exclude": [
    "../node_modules",
    "../**/dist",
    "../**/tests",
    "../cli"
  ],
}