    "schemas": {
      "modbus_serial_client_server_single_options": {
        "title": "modbus_serial_client_server_single_options",
        "type": "object",
        "properties": {
          "enabled": {
            "type": "string",
            "description": "Enables/Disables Modbus Serial Client Server.",
            "format": "is_bool",
            "enum": [
              "0",
              "1"
            ],
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            }
          },
          "name": {
            "type": "string",
            "description": "Name of the server device. Used for easier device management purposes only",
            "maxLength": 200,
            "x-web": {
              "pretty": "Name",
              "input-type": "input",
              "unique": true
            }
          },
          "server_id": {
            "type": "string",
            "description": "Modbus server ID number",
            "format": "irange(1, 255)",
            "default": "1",
            "x-web": {
              "pretty": "Server ID",
              "input-type": "input"
            }
          },
          "period": {
            "type": "string",
            "description": "Interval for sending requests to this device.",
            "format": "irange(1, 99999)",
            "x-web": {
              "pretty": "Period",
              "input-type": "input",
              "depends": [
                {
                  "frequency": "period"
                }
              ]
            }
          },
          "skip_on_many_tmos": {
            "type": "string",
            "description": "Skip pending request and reset connection after number of request failures.",
            "format": "irange(0, 10)",
            "default": "0",
            "x-web": {
              "pretty": "Number of timeouts",
              "input-type": "input"
            }
          },
          "frequency": {
            "type": "string",
            "description": "Select witch timing method will be used to send requests.",
            "enum": [
              "period",
              "schedule"
            ],
            "x-web": {
              "pretty": "Frequency",
              "enum-pretty": {
                "period": "Period",
                "schedule": "Schedule"
              },
              "input-type": "select"
            }
          },
          "schedule": {
            "type": "string",
            "description": "Schedule request time in format: Hours:Minutes:Seconds.",
            "format": "regex",
            "pattern": "^[0-9, *]*$",
            "x-web": {
              "pretty": "Schedule requests",
              "input-type": "input",
              "depends": [
                {
                  "frequency": "schedule"
                }
              ]
            }
          },
          "rtu_device": {
            "type": "string",
            "description": "Serial device for rtu server.",
            "x-web": {
              "pretty": "Serial device",
              "input-type": "input"
            }
          },
          "timeout": {
            "type": "string",
            "description": "Serial device response timeout.",
            "format": "irange(1, 60)",
            "x-web": {
              "pretty": "Timeout",
              "input-type": "input"
            }
          }
        },
        "required": [
          "rtu_device",
          "name"
        ]
