{
  "services/modbus/modbus_serial_client": {
    "description": "modbus tcl client configuration",
    "read": {
      "api": {
        "/modbus/client/*": ["*"],
        "/io/status/*": ["*"],
        "/modems/status/*": ["id", "name", "builtin", "index"],
        "/serial/status/*": ["*"],
        "/certificates/config/*": ["fullname", "cert_type", "type"],
        "/basic/network/devices/status/*": ["name"]
      }
    },
    "write": {
      "api": ["/modbus/client/*"]
    }
  }
}
