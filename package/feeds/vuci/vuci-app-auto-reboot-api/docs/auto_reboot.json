  "components": {
    "schemas": {
      "periodic_reboot": {
        "type": "object",
        "properties": {
          "enable": {
            "type": "string",
            "description": "Enable reboot instance",
            "x-web": {
              "pretty": "Enable",
              "input-type": "switch"
            }
          },
          "action": {
            "type": "string",
            "description": "Action that will be executed at specified time",
            "enum": [
              "1"
