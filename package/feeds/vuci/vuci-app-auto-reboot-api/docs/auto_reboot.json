            "x-web": {
              "pretty": "Action",
              "input-type": "select",
              "enum-depends": [
                {
                  "hw_tags": {
                    "mobile": true
                  },
                  "values": [
                    "1",
                    "2"
                  ]
                }
              ],
              "enum-pretty": {
                "1": "Device reboot",
                "2": "Modem reboot"
              },
              "unique": true
            }
          },
          "modem": {
            "type": "string",
            "description": "Modem selection",
