          },
          "updated": {
            "x-web": {
              "pretty": "Created / Updated"
            },
            "type": "string",
            "description": "Timestamp of profile creation date or last profile update.",
            "readOnly": true
          },
          "profile_id": {
            "x-web": {
              "pretty": "Profile ID"
            },
