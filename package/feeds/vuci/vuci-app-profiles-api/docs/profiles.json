    "/profiles/actions/apply_profile": {
      "post": {
        "summary": "Applies provided profile",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Operation status",
                      "default": true
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "lan_ip": {
                          "type": "string",
                          "description": "LAN IP address of the profile.",
                          "default": "192.168.1.2"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "422": {
            "$ref": "#/components/responses/422response"
          }
