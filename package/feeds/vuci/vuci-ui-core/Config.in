menu "Configuration"
	depends on PACKAGE_vuci-ui-core

	config VUCI_BUILD_DEV
	bool "Build for development"
	default n
	depends on PACKAGE_vuci-ui-core
	help
	  This turn on development mode. During development, Vue provides
	  a lot of warnings to help you with common errors and pitfalls.

	config VUCI_MINIFY_JSON
	bool "Minify json files"
	default y
	depends on PACKAGE_vuci-ui-core

	choice
		prompt "Node compiler config"
		default VUCI_USE_HOST_NODE

		config VUCI_USE_HOST_NODE
			bool "Host Node"
			help
				This option select host installled node compile vuejs 
		
		config VUCI_USE_VUCI_NODE
			bool "VuCI node"
			help
				Select this option will be use VuCI node version for compile VUE code

	endchoice

	config VUCI_NODE_EXTRA_BIN_PATH
		string "Extra path to nodejs binaries"
		help
			Specify a different path to nodejs binaries, in case they are not in /usr/bin or /usr/local/bin
		depends on VUCI_USE_HOST_NODE
	
endmenu
