    "schemas": {
      "advanced_route_rules_options": {
        "type": "object",
        "properties": {
          "priority": {
            "x-web": {
              "pretty": "Priority",
              "input-type": "input"
            },
            "type": "string",
            "description": "Controls the order of the IP rules, by default the priority is auto-assigned so that they are processed in the same order."
          },
          "in": {
            "x-web": {
              "pretty": "Incoming Interface",
              "input-type": "input"
            },
            "type": "string",
            "description": "Specifies the incoming logical interface name."
          },
          "out": {
            "x-web": {
              "pretty": "Outgoing Interface",
              "input-type": "input"
            },
            "type": "string",
            "description": "Specifies the outgoing logical interface name."
          },
          "src": {
            "x-web": {
              "pretty": "Source subnet",
              "input-type": "input"
            },
            "type": "string",
            "description": "Specifies the source subnet to match (CIDR notation). e.g 192.168.1.1/24"
          },
          "dest": {
            "x-web": {
              "pretty": "Destination subnet",
              "input-type": "input"
            },
            "type": "string",
            "description": "Specifies the destination subnet to match (CIDR notation) e.g 192.168.1.1/24 ."
          },
          "tos": {

            "type": "string",
            "description": "Specifies the TOS value in decimal to match in IP headers.",
            "enum": [
              "0",
              "2",
              "4",
              "8",
              "16"
            ],
            "x-web": {
              "pretty": "TOS Value to Match",
              "input-type": "select",
              "enum-pretty": {
                "0": "Normal-Service (0)",
                "2": "Minimize-Cost (2)",
                "4": "Maximize-Reliability (4)",
                "8": "Maximize-Troughput (8)",
                "16": "Minimize-Delay (16)"
              }
            }
          },
          "mark": {
            "x-web": {
              "pretty": "Firewall Mark",
              "input-type": "input"
            },
            "type": "string",
            "description": "Specifies the fwmark and optionally its mask to match, e.g. 0xFF to match mark 255 or 0x0/0x1 to match any even mark value."
          },
          "invert": {
            "x-web": {
              "pretty": "Invert matches",
              "input-type": "switch"
            },
            "type": "string",
            "description": "If enabled, the meaning of the match options (Firewall Mark, TOS Value, Source and Destination subnets) is inverted."
          },
          "action_group": {
            "type": "string",
            "enum": [
              "lookup",
              "goto",
              "action"
            ],
            "x-web": {
              "pretty": "Matched Traffic Action",
              "input-type": "select",
              "enum-pretty": {
                "lookup": "Lookup Table",
                "goto": "Jump to Rule",
                "action": "Routing Action"
              }
            }
          },
          "lookup": {
            "x-web": {
              "pretty": "Lookup Table",
              "input-type": "input",
              "depends": [
                {
                  "action_group": "lookup"
                }
              ]
            },
            "type": "string",
            "description": "The rule target is a table lookup."
          },
          "goto": {
            "x-web": {
              "pretty": "Jump to rule priority",
              "input-type": "input",
              "depends": [
                {
                  "action_group": "goto"
                }
              ]
            },
            "type": "string",
            "description": "The rule target is a jump to another rule specified by its priority value."
          },
          "action": {
            "x-web": {
              "pretty": "Routing Action",
              "input-type": "input",
              "depends": [
                {
                  "action_group": "action"
                }
              ]
            },
            "type": "string",
            "description": "The rule target is one of the routing actions outlined in the table below."
          }
        }
      }
    },
