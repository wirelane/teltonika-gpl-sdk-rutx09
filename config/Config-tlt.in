config ADVANCED_NETWORK
	bool "Network"
	maintainer "Networks/Core"
	depends on !AP_DEVICE
	default y
	detail
		Status: LAN networks, DHCP leases, Firewall rules and policies, IPv4/IPv6 routes, ARP table, IPv6 neighours
		Interfaces: static IP, DHCP client, DHCPv6 client, PPPoE, IPv6 prefix management, IPv6 SLAAC
		VLAN: tagged (trunk), untagged (access)
		Routing: static routing, policy based routing, routing rules
		DHCP: status, DHCPv4 server, DHCP relay, custom DHCP options
		DHCPv6: status, server mode, statless mode, statefull mode, relay mode, Router advertisement, NDP proxy
		DNS: caching DNS server, DNS forwardings, rebind protection, static DNS entries
		Ports control: view device ports, enable and disable each of them, turn auto-configuration on or off, change their transmission speed
	imply PACKAGE_vuci-app-ports-settings-ui if !AP_DEVICE
	imply PACKAGE_ethtool
	imply PACKAGE_networkmap
	imply BUSYBOX_DEFAULT_ARPING
	imply PACKAGE_vuci-app-networkmap-ui
	imply PACKAGE_vuci-app-dhcp-ui
	imply PACKAGE_odhcpd-ipv6only
	imply PACKAGE_6rd
	imply PACKAGE_vuci-app-routes-ui
	imply PACKAGE_vuci-app-dns-ui

config FIREWALL_SUPPORT
